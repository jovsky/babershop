generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  phone        String
  isBarber     Boolean
  schedules    Schedule[]

  @@map("user")
}

model Professional {
  id                   Int           @id @default(autoincrement())
  name                 String        
  description          String
  imageURL             String
  rating               Float
  totalReviews         Int
  scheduling         Schedule[]

  @@map("professional")
}

model Service {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  description  String
  price        Float
  slots        Int
  imageURL     String
  schedules    Schedule[]

  @@map("service")
}

model Schedule {
  id             Int          @id @default(autoincrement())
  date           DateTime     @db.Timestamptz(3)
  professional   Professional @relation(fields: [professionalId], references: [id])
  professionalId Int
  services       Service[]
  user           User         @relation(fields: [userId], references: [id])
  userId         Int

  @@map("schedule")
}
